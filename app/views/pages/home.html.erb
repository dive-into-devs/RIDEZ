<div class="banner d-flex flex-column justify-content-center align-items-center">
  <h2>RIDEZ</h2>
    <p> find your favourite car</p>
    <div class="filter-section">
<form action="/cars" method="get">
<Select name="brand">
  <option>brand</option>
  <% @brands.each do |brand|%>
  <option value="<%= brand %>"><%= brand %></option>
  <% end %>
</Select>
<Select name="location">
<option>location</option>
<% @cities.each do |city|%>
<option value="<%= city %>"><%= city %></option>
<%end%>

</select>
<input name="date" type="text" data-controller="datepicker" placeholder="select a date"/>
<input class="submit-btn" type="submit"></input>
</form>
</div>
</div>
<div class="container mt-5 w-100">
  <div class="d-flex flex-row justify-content-between align-items-center">
    <h4>Cars List</h4>
    <%= link_to "View all", cars_path ,class: "btn btn-primary rounded" %>
  </div>
    <hr size="2">
  <div class="container d-flex flex-row flex-wrap justify-content-center align-items-center w-100">
    <ul class="d-flex flex-row justify-content-start align-items-start w-100 gap-2 p-0 flex-wrap">
      <% @cars[0..7].each do | car |  %>
        <li class="card card-sizing">
          <img src="https://hips.hearstapps.com/hmg-prod/images/2023-tesla-model-x-101-1671475309.jpeg?crop=0.375xw:0.300xh;0.391xw,0.323xh&resize=640:*" class="card-img-top" alt="car">
          <div class="card-body">
          <h5 class="card-title"><%= car.model%></h5>
          <p class= "card-text"><%= car.description%><span>/<%= car.location%></span></p>
          <%= link_to "Details", car_path(car), class: "btn btn-primary" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
